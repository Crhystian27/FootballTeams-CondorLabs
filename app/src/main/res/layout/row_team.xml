<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CustomMargin4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_background"
    app:cardCornerRadius="@dimen/custom_spacing15dp"
    app:cardElevation="@dimen/custom_spacing8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowTeamConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewStadium"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.github.florent37.diagonallayout.DiagonalLayout
            android:id="@+id/diagonalLayout1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:elevation="10dp"
            app:diagonal_angle="3"
            app:diagonal_direction="left"
            app:diagonal_position="left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/param0"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/purple_700"
                android:gravity="center"
                android:lines="1"
                android:paddingStart="@dimen/custom_spacing16dp"
                android:paddingEnd="@dimen/custom_spacing8dp"
                android:shadowColor="@android:color/darker_gray"
                android:shadowDx="2"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="@string/app_name"
                android:textColor="@color/white" />

        </com.github.florent37.diagonallayout.DiagonalLayout>

        <ImageView
            android:id="@+id/imageViewTeamBadge"
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:layout_marginStart="@dimen/custom_spacing16dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/param1"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/custom_spacing8dp"
            android:layout_marginEnd="@dimen/custom_spacing8dp"
            android:elevation="10dp"
            android:gravity="center"
            android:shadowColor="@color/purple_700"
            android:shadowDx="2"
            android:shadowDy="-2"
            android:shadowRadius="3"
            android:textStyle="bold"
            android:text="@string/app_name"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/param2"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/custom_spacing8dp"
            android:elevation="10dp"
            android:gravity="center"
            android:shadowColor="@color/purple_700"
            android:shadowDx="2"
            android:shadowDy="-2"
            android:shadowRadius="3"
            android:text="@string/app_name"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/param1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>




